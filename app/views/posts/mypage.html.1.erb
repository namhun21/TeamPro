<div class ="container">
    <div class = "row">
        <div class = "col s12 m4">
            <div class = "card">
                <div class = "card-image">
                    <img src = "<%= current_user.avatar.url %>"/>
                </div>
                <div class = "card-content">
                    <div class = "card-title"><%=current_user.name %></div>
                    <p>이메일 : <%= current_user.email %></p>
                    <p>올린 글 개수 : <%= @mypage_count %></p>
                    <p>팔로워 : <%= current_user.followers.length %></p>
                    <p>팔로잉 : <%= current_user.followings.length %></p>
                    
                    <%= link_to new_post_path do %>
                        <button class = "btn"> 글 쓰기</button>
                    <% end %>
                </div>
            </div>
        </div>
        <div class = "col s12 m8">
            <p>내가 쓴글</p>
            <% @mypages.each do |m| %>
                <%= render partial: "post", object: m%>
            <% end %>
            <%= paginate @posts %>
            <p>내가 팔로우한 글</p>
            <% @follows.each do |f| %>
                <%= render partial: "post", object: f%>
            <% end %>
            <%= paginate @posts %>
        </div>
    </div>
</div>